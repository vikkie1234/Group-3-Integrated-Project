@{
    ViewBag.Title = "Home Page";
}
<style>
    p {text-align: center;}

    #pName {text-align:left !important;}

    h2 {text-align:center;}

    h1 {text-align:center;}

    a {color: #666666}

    #button {
        padding: 10px 16px;
        font-size: 18px;
        line-height: 1.3333333;
        border-radius: 6px;
        display: inline-block;
        margin-bottom: 0;
        font-weight: normal;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -ms-touch-action: manipulation;
        touch-action: manipulation;
        cursor: pointer;
        background-image: none;
        border: 1px solid transparent;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        border-radius: 4px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        color: #fff;
        background-color: #2E3192;
        border-color: #2e6da4;
    }
</style>
<div class="jumbotron" style="margin: auto; width:fit-content">
    <h1>Logo</h1>
    <h2>@Html.ActionLink("Home", "Index", "Home")</h2>
    <h2>@Html.ActionLink("About", "About", "Home")</h2>
    <h2>@Html.ActionLink("Contact", "Contact", "Home")</h2>
    <p class="lead" id="pName">Name</p>
    <p><input type="text"></p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Login</a></p>
    <p><a href="https://localhost:44384/Home/Register" class="btn btn-primary btn-lg">Register</a></p>
</div>